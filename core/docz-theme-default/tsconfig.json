{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsxFactory": "jsx",
    "declaration": true,
    "sourceMap": false,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "paths": {
      "~styles": ["styles"],
      "~styles/*": ["styles/*"],
      "~theme": ["theme"],
      "~theme/*": ["theme/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "src/types"],
  "exclude": ["node_modules/**"]
}
